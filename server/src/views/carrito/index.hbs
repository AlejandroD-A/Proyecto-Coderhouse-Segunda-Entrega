


<section class="section">
    <div class="container">
      <h1 class="title">
        Carrito
      </h1>
      
    {{#if cartExists}}
        <ul class="columns is-desktop">
            {{#each cartItems}}

            <div class="card column">
                <div class="card-image">
                    <figure class="image ">
                    <img src={{ this.product.thumbnail }} alt="Placeholder image">
                    
                    </figure>
                </div>
                <div class="card-content">

                    <div class="content">
                        <h5>${{ this.product.price }} </h5>
                    <br>
                      <div class="field has-addons">
                            <div class="control" style="width: 4rem; ">
                                <input class="input" id="quantity" min="1" type="number" placeholder="Ingresa una cantidad" value={{this.quantity}}>
                            </div>
                            <div class="control">
                               <button type="submit" class="button is-success">Actualizar Cantidad</button>
                            </div>
                        </div>
                      <button class="button">Eliminar</button>
                    </div>
            </div>
            </div>
            {{/each}}
        </ul>
    {{else}}
    <h1>No hay Productos en el Carrito</h1>
    {{/if}}
    </div>
  </section>